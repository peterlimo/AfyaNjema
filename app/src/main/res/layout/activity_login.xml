<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    tools:context=".activities.LoginScreen">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">
    <View
        android:id="@+id/v_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="0dp"
        android:layout_height="@dimen/activity_login_btn_sign_up_height"
        android:layout_marginTop="@dimen/activity_login_btn_sign_up_marginTop"
        android:background="@drawable/btn_rounded_borderless"
        android:fontFamily="@font/proximanova_semibold"
        android:letterSpacing="0.05"
        android:text="@string/signup"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/activity_login_btn_sign_up_textSize"
        app:layout_constraintEnd_toEndOf="@+id/btn_login"
        app:layout_constraintStart_toStartOf="@+id/btn_login"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="@dimen/activity_login_btn_login_height"
        android:layout_marginTop="@dimen/activity_login_btn_login_marginTop"
        android:background="@drawable/btn_rounded_white"
        android:fontFamily="@font/proximanova_semibold"
        android:letterSpacing="0.05"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/activity_login_btn_login_textSize"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="@+id/et_password"
        app:layout_constraintStart_toStartOf="@+id/et_password"
        app:layout_constraintTop_toBottomOf="@+id/et_password" />

    <TextView
        android:id="@+id/tv_telemedicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_login_tv_telemedicine_marginTop"
        android:fontFamily="@font/nunito_bold"
        android:letterSpacing="0.075"
        android:text="@string/telemedicine"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textScaleX="1.09"
        android:textSize="@dimen/activity_login_tv_telemedicine_textSize"
        android:textStyle="normal|bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="@dimen/activity_login_et_email_height"
        android:layout_marginStart="@dimen/activity_login_et_email_marginStart"
        android:layout_marginTop="@dimen/activity_login_et_email_marginTop"
        android:layout_marginEnd="@dimen/activity_login_et_email_marginEnd"
        android:background="@drawable/form_input"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="@dimen/activity_login_et_email_drawablePadding"
        android:fontFamily="@font/proximanova_regular"
        android:hint="@string/email_adress"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="@dimen/activity_login_et_email_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_telemedicine" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="@dimen/activity_login_et_password_height"
        android:layout_marginTop="@dimen/activity_login_et_password_marginTop"
        android:background="@drawable/form_input"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="@dimen/activity_login_et_password_drawablePadding"
        android:fontFamily="@font/proximanova_regular"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="@dimen/activity_login_et_password_textSize"
        app:layout_constraintEnd_toEndOf="@+id/et_email"
        app:layout_constraintStart_toStartOf="@+id/et_email"
        app:layout_constraintTop_toBottomOf="@+id/et_email" />
    <Button
        android:id="@+id/btn_admin"
        android:layout_width="0dp"
        android:layout_height="@dimen/activity_login_btn_login_height"
        android:layout_marginTop="@dimen/activity_login_btn_login_marginTop"
        android:background="@drawable/btn_rounded_borderless"
        android:fontFamily="@font/proximanova_semibold"
        android:letterSpacing="0.05"
        android:text="Admin"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="@dimen/activity_login_btn_login_textSize"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="@+id/et_password"
        app:layout_constraintStart_toStartOf="@+id/et_password"
        app:layout_constraintTop_toBottomOf="@+id/btn_sign_up" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>